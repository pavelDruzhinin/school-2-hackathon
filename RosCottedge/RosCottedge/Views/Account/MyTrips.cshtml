@section Scripts {
    <script>
    $(document).ready(function () {
        var $c = $('.numberRating');
        if (parseInt($c.text()) != 0) {
            var c = parseFloat($c.text().replace(',', '.'));
            c = c.toFixed(1);
            $c.text(c);
        }

        $('.myTripsDelButton').on('click', function () {
            $('#delReserv').submit();
        });
    });
    </script>
}
